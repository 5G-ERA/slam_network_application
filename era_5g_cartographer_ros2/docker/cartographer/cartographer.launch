<launch>

  <node name="cartographer_node" pkg="cartographer_ros"
      exec="cartographer_node" args="
          -configuration_directory /root/
          -configuration_basename cartographer.lua">
    <remap from="points2" to="/robot/top_laser/point_cloud" />
    <remap from="imu" to="/robot/imu/data" />
    <remap from="odom" to="/robot/odometry/filtered" />
  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      exec="cartographer_occupancy_grid_node" args="-resolution 0.05" />
</launch>